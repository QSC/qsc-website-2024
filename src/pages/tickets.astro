</Layout>
<style lang="scss">
  @import "../styles/fonts";
  @import "../styles/variables";

  .main {
    background-image: url("../images/spacebg.png");
    background-attachment: fixed;
    background-size: cover;
    padding-block:1em;
    padding-inline: 2em;
    word-wrap: break-word;

    p {
      font-size: 1.1em;
    }

    article {
      display: flex;
      flex-direction: column;
      gap:2em;

      @media screen and (min-width: $screen-mobile-large) {
        margin-inline: 12vw;
      }
    }

    section:nth-of-type(2) {
      // scrolls into proper place when anchor clicked
      scroll-margin-top: calc(var(--navbar-height) + 4em);
    }

    h1 {
      color: $yellow;
      font-size: 5em;
      margin-bottom: .2em;
      @media screen and (max-width: $screen-mobile-medium){
        font-size: 4em;
      }
      @media screen and (max-width: $screen-mobile-small){
        font-size: 3em;
      }
    }

    h2 {
      text-align: center;
      font-size: 2em;
    }

    :global(span.orange) {
      font-weight: $heavy-weight;
    }

    .ticketBlurb, .bursaryBlurb {
      background-color: rgba(black, 40%);
      border-radius: 20px;
      // to make the p tag shrink to the text size
      display:inline-block;
    }

    .ticketBlurb {
      font-size: 1.3em;
      font-weight: $medium-weight;
      margin-bottom: 1em;
    }

    .bursaryBlurb {
      color: $orange;
      margin-bottom: .5em;
      padding:.3em;
      padding-inline: .5em;
      font-weight: $medium-weight;
      text-decoration: none;
    }

    a {
      text-decoration: none;
      border-radius: 20px;
      text-align: center;
      font-family: $orbitron;
      font-weight: $medium-weight;
    }

    .cards {
      display: flex;
      flex-direction: row;
      gap: 4em;
      flex-wrap: wrap;
      justify-content: center;

      @media screen and (min-width: $screen-desktop) {
        justify-content: space-between;
      }
    }

    div:has(>.card) {
      @media screen and (min-width: $screen-desktop) {
        max-width: 40%;
        min-width: 30ch;
      }
    }

    .card {
      background-color: rgba($light-purple, 70%);
      padding-inline: 1.5em;
      padding-block:1.25em;
      border-radius: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: .3em;
      width: 100%;

      .price {
        color: $yellow;
        font-family: $orbitron;
        font-size: 1.5em;
        font-weight: $medium-weight;
        text-align: center;
      }

      .date {
        color: yellow;
        margin-bottom:1em;
        font-weight: $medium-weight;
        text-align: center;
      }

      ul {
        list-style: disc;
        padding-inline: 1em;
      }

      li:not(:last-child) {
        margin-bottom: .4em;
      }

      a.ticketButton {
        padding: 1em;
        background-color: $dark-purple;
        width: 90%;
        color: $yellow;
        font-size: 1.1em;
        margin-top: 1em;
      }

      a.ticketButton:hover {
        background-color: lighten($dark-purple,15);
        color: $orange;
      }
    }

    .bursary::before {
      content: "*";
      color: $orange;
      font-size: 5em;
      position: absolute;
      top:-.5em;
      left:-.3em;
      font-family: $orbitron;
    }

    .bursary {
      background-color: rgba($dark-purple, 40%);
      border-radius: 20px;
      padding-inline: 1.5em;
      padding-block:1.25em;
      position: relative;

      h2, h3 {
        text-align: left;
        color: $orange;
      }

      h3 {
        font-size:2em;
      }

      a.bursaryButton {
        background-color: $light-purple;
        color: $dark-purple;
        font-size: 1.3em;
        padding: .8em;
        border: 3px solid $orange;
        display: inline-block;
        font-weight: $medium-weight;
        margin-top:1em;
      }

      a.bursaryButton:hover {
        background-color: lighten($dark-purple,0);
        color: $yellow;
      }

      .instructions {
        margin-top:1em;
        p:nth-of-type(1) {
          >span {
            color:lighten($light-purple,10);
            font-weight: $heavy-weight;
          }
        }

        div:has(>.question) {
          display: flex;
          flex-direction: column;
          gap:1em;
          margin-top:1em;
        }

        .question {
          display: flex;
          flex-direction: row;
          gap:.5em;
          padding:1em;
          background-color: rgba($dark-purple,70%);
          border-radius: 20px;

          // numbers
          >p:nth-of-type(1) {
            color: $orange;
            font-weight: $heavy-weight;
          }

          // the div with the Q and A
          >div {
            display: flex;
            flex-direction: column;

            // Q
            p:nth-of-type(1) {
              color: $orange;
            }

            // A
            p:nth-of-type(2) {
              color: yellow;
              span {
                color:$white;
              }
            }
          }
        }
      }
    }
  }
</style>