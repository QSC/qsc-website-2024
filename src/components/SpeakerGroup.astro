---
import Speaker from "./Speaker.astro";
const { speakerList, title, year, images } = Astro.props;
---

<div id={year} class="speakerGroup">

    { title && <h3>--{title}--</h3>}

    <div>
        <!-- The ID is for anchoring -->
        <div class="speakers">
            {
                speakerList.map(speaker => {
                    return <Speaker year={year} speaker={speaker} images={images}/>
                })
            }
        </div>
    </div>
</div>
<style lang="scss">
    @import "../styles/fonts";
    @import "../styles/variables";

    .speakerGroup {
        scroll-margin-top: calc(var(--navbar-height));
        .speakers {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap:4em;
            justify-content: center;

            @media screen and (max-width: $screen-desktop) {
            //display: flex;
            //flex-direction: column;
            //align-items: center;
                grid-template-columns: 1fr;
            }
        }

        div:has(>.speakers) {
            display: flex;
            justify-content: center;
        }

        h3 {
            font-size: 4em;
            text-align: center;
            margin-bottom: .3em;
            @media screen and (max-width: $screen-desktop) {
                font-size: 3em;
            }
        }
    }
</style>
